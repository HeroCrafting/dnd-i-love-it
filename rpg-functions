def racial(race):
    racas = [0, 'Humano', 'Hobbit', 'Dríade', 'Goblin', 'Elfo', 'Gigante', 'Troll', 'Anão', 'Orc']
    race = racas[race]
    return race

def classes(classe):
    classList = [0,'Guerreiro', 'Arqueiro', 'Lanceiro', 'Mago', 'Ladino', 'Paladino', 'Druida', 'Bárbaro']
    guerreiro, arqueiro, lanceiro, mago, ladino, paladino, druida, barbaro = 0, 0, 0, 0, 0, 0, 0, 0
    classe = classList[classe]
    return classe

def quest1(dentes):
    print("Responda as seguintes perguntas pessoais: ")
    print("Escolha 1 para SIM e 2 para NÃO.")
    pontuacao = 0

    if dentes == 1:
        pontuacao = pontuacao + 3
        return "Você ganhou 3 pontos!", pontuacao
    else:
        return "Você não passou nesse teste!"


def quest2(guerra):
    pontuacao = 0
    if guerra == 1:
        pontuacao = pontuacao + 1
        return "Você ganhou +1 ponto!"
    else:
        return "Você não passou nesse teste!"


def quest3(unigen):
    pontuacao = 0
    if unigen == 1:
        return "Que pena, você não ganha nada..."
    else:
        pontuacao = pontuacao + 2
        return "Parabéns, +2 pontos."

def quest4(armadura):
    pontuacao = 0
    if armadura == 1:
        pontuacao = pontuacao + 1
        return "Uau, +1 ponto!"

    else:
        return "Poxa, não tem nem uma armadura?"

def quest5(indicacao):
    pontuacao = 0
    if indicacao == 1:
        pontuacao = pontuacao + 2
        return "Você tem QI, Quem Indique... Parabéns, +2 pontos"

    else:
        return "Bem... vamos prosseguir..."

