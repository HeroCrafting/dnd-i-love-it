start = 0  # Variavel de parada
while start == 0:
    humano, hobbit, driade, goblin, elfo, gigante, troll, anao, orc = 0, 0, 0, 0, 0, 0, 0, 0, 0
    inscritos = 0
    print("\nOh nobres participantes!")
